page {
  background-image: none;
  background: #eee;
}

.room_introductory {
  padding: 0 20rpx;
  font-weight: bold;
  background: #fff;
}

.room_introductory image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}

.room_content {
  padding: 20rpx 0;
  font-size: 24rpx;
}

.allot_list {
  padding: 0 20rpx;
}

.allot_item {
  padding: 0 20rpx;
  margin-top: 20rpx;
  background: #fff;
}

.allot_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: block;
}

.title {
  padding: 20rpx 0;
  font-weight: bold;
  border-bottom: 1rpx solid #a5a5a5;
}

.allot_content {
  padding: 20rpx 0;
}

.allot_detail {
  padding-left: 10rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.sure_btn {
  border-top: 1rpx solid #a5a5a5;
  text-align: center;
}

.btn1, .btn2 {
  color: #fff;
  height: 100rpx;
  line-height: 100rpx;
}

.btn1 {
  background: #fb986e;
}

.btn2 {
  background: #c34944;
}

.base {
  position: fixed;
  width: 100%;
  background: #fff;
  /* height: 100rpx; */
  bottom: 0;
}

.hint {
  font-size: 32rpx;
  font-weight: bold;
  height: 100rpx;
  line-height: 100rpx;
}
