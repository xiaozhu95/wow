
.bill-wraper {
  padding: 30rpx;
}

.bill_list {
  background-color: #fff;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.bill_list image {
  width: 100%;
  height: 100%;
}

.bill_list .icon {
  width: 80rpx;
  height: 80rpx;
}

.bill_list .info {
  flex: 1;
  padding: 0rpx 20rpx;
}

.bill_list .info .name {
  font-size: 28rpx;
  color: #464646;
}

.bill_list .info .configuration {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #a1a1a1;
}

.bill_list .info .configuration text {
  margin-right: 20rpx;
}

.bill_list .pay {
  padding: 15rpx 0rpx;
  text-align: right;
  font-size: 24rpx;
  color: #a1a1a1;
  border-bottom: 1px solid #e2e2e2;
}

.bill_list .pay text {
  color: #464646;
}

.pay_for {
  font-size: 24rpx;
  margin-top: 20rpx;
}


.pay_for .btn {
  background-image: linear-gradient(135deg, #2c0403, #350802 70%, #2e0d00);
  box-shadow: 0 3px 6px 0 rgba(36, 6, 2, 0.2);
  color: #f7b10a;
  border: none;
  height: 54rpx;
  line-height: 54rpx;
  text-align: center;
  width: 140rpx;
  border-radius: 28rpx;
}
.pay_for .pay_time{
  flex: 1;
  font-size: 24rpx;
  color: #a1a1a1;
}

.pay_for image {
  width: 30rpx;
  height: 30rpx;
}
